<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ChangePassFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingStart="50dp">

                <TextView
                    android:id="@+id/tv_PassOld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mật khẩu hiện tại"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtPassOld"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"/>

                    <ImageView
                        android:id="@+id/btnShowOld"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/eye"
                        android:layout_marginStart="270dp"/>

                    <ImageView
                        android:id="@+id/btnHideOld"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/eye_off"
                        android:layout_marginStart="270dp"
                        android:visibility="gone"/>

                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingStart="50dp">

                <TextView
                    android:id="@+id/tv_PassNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mật khẩu mới"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtPassNew"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"/>

                    <ImageView
                        android:id="@+id/btnShowNew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/eye"
                        android:layout_marginStart="270dp"/>

                    <ImageView
                        android:id="@+id/btnHideNew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/eye_off"
                        android:layout_marginStart="270dp"
                        android:visibility="gone"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingStart="50dp">

                <TextView
                    android:id="@+id/tv_Confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xác nhận mật khẩu mới"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtConfirm"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"/>

                    <ImageView
                        android:id="@+id/btnShowConfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/eye"
                        android:layout_marginStart="270dp"/>

                    <ImageView
                        android:id="@+id/btnHideConfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/eye_off"
                        android:layout_marginStart="270dp"
                        android:visibility="gone"/>

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnChange"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Xác nhận"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>