<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_story"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <ImageView
           android:id="@+id/img"
           android:layout_width="400dp"
           android:layout_height="200dp"
           android:src="@drawable/ic_launcher_background" />

       <TextView
           android:id="@+id/tv_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/img"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp"
           android:text="Thập đại đế hoàng"
           android:textSize="20sp" />

       <TextView
           android:id="@+id/tv_author"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tv_name"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp"
           android:text="SOmme one"
           android:textSize="20sp" />

       <TextView
           android:id="@+id/tv_category"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tv_author"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp"
           android:text="Huyền huyễn, tu tiên,..."
           android:textSize="20sp" />

       <TextView
           android:id="@+id/tv_content"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tv_category"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp"
           android:text="fdsfhlsdsdj fádhfs fídjfo fsfídjfidsf"
           android:textSize="20sp" />

       <TextView
           android:id="@+id/tv_favorites"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tv_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp"
           android:text="0"
           android:textSize="20sp" />
       <Button
           android:layout_below="@+id/tv_favorites"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Doc truyen"
           android:id="@+id/btn_read"/>
       <ImageView
           android:id="@+id/btn_favorite"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:layout_below="@+id/tv_content"
           android:layout_marginLeft="5dp"
           android:layout_marginTop="20dp"
           android:layout_toRightOf="@+id/tv_favorites"
           android:background="@android:color/transparent"/>
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/view_icon"
           android:id="@+id/views_icon"
           android:layout_below="@id/tv_content"
           android:layout_toRightOf="@id/btn_favorite"
           android:layout_marginLeft="20dp"
           android:layout_marginTop="20dp"
           />
       <TextView
           android:id="@+id/tv_views"
           android:text="10"
           android:layout_toRightOf="@id/views_icon"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="20dp"
           android:layout_below="@id/tv_content"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="20sp"
           />
       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/chapter_rv"
           android:layout_marginTop="30dp"
           android:layout_centerHorizontal="true"
           android:layout_below="@+id/tv_favorites"/>
   </RelativeLayout>

</ScrollView>